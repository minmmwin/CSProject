           postMessage(message)
            });
            getMessages(); 
        });

        function addMessages(message){
            $("#oldMessages").append(`<h4> ${message.name} </h4> <p> ${message.message}</p>`);
        }

        function getMessages() {
            $.get('http://localhost:5200/message/messages', (data) => {
                //console.log(data);
                data.forEach(addMessages);
            });
        }

         function postMessage(message) {
            $.post('http://localhost:5200/message/messages', message);
                
        }

